---
import InnerLayout from "./InnerLayout.astro";
import { DocsTab } from "../../components/docs/menu/docs_tab";
import type { Author } from "../../components/docs/author";
import type Collection from "../../util/collection";
import SelfHostedRedirect from "../../components/site/SelfHostedRedirct";

interface Props {
	title: string;
	titleFmt?: undefined | ((title: string) => string);
	description: string;
	heading?: string;
	published?: undefined | string;
	modified?: undefined | string;
	lang?: string;
	collection?: undefined | Collection;
	slug?: undefined | string;
	author?: Author;
}

const {
	title,
	titleFmt,
	description,
	heading,
	published,
	modified,
	lang,
	collection,
	slug,
	author,
} = Astro.props;
---

<InnerLayout
  title={title}
  titleFmt={titleFmt ?? ((title) => `ðŸ° ${heading ?? title}`)}
  description={description}
  heading={heading}
  published={published}
  modified={modified}
  tab={DocsTab.Learn}
  lang={lang}
  collection={collection}
  slug={slug}
  author={author}
>
  <SelfHostedRedirect client:only="solid-js" path="/docs/api" />
  <slot />
</InnerLayout>
