---
import { getCollection } from "astro:content";
import ApiLayout from "../../../../../layouts/docs/ApiLayout.astro";
import { Collection } from "../../../../../content/config";
import Operation from "../../../../../components/docs/api/Operation.astro";
import { otherLanguages } from "../../../../../i18n/ui";

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const pages = await getCollection(Collection.organizations);
  return otherLanguages.map((lang) => {
    return pages.map((page) => ({
      params: { lang, slug: page.slug },
      props: { page },
    }));
  }).flat();
}
// 2. When it's time to render, you can get the entry directly from the prop
const { page } = Astro.props;
const { slug } = Astro.params;
---

<ApiLayout
  title={page.data.title}
  titleFmt={(_title) => `ðŸ° ${page.data.heading}`}
  description={page.data.description}
  heading={page.data.heading}
  collection="organizations"
  slug={slug}
>
  {page.data.paths.map(({path, method, headers, cli}, index) =>
    <Operation path={path} method={method} headers={headers} cli={cli} index={index} />
  )}
</ApiLayout>
