---
export const prerender = true;

import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Brand Kit";
const titleFmt = (title: string) => `üê∞ ${title}`;
const description = "Bencher Brand Kit: Logo, Wordmark, and more.";
---

<BaseLayout title={title} titleFmt={titleFmt} description={description}>
    <section class="section" style="margin-bottom: 12rem;">
        <div class="container">
          <div class="columns is-centered">
            <div class="column">
              <h1 class="title is-1">Brand Kit</h1>
              <h2 class="subtitle is-3">Use of the Bencher Logo and Bencher Wordmark are bound by our <a href="https://bencher.dev/legal/trademark">Trademark Policy</a></h2>
            </div>
          </div>
            <hr />
        </div>
        <div class="container">
            <h2 class="title">Logo</h2>
            <div class="columns">
                <div class="column has-text-centered is-one-third">
                    <div class="card">
                        <header class="card-header">
                            <p class="card-header-title">
                                Bencher Logo
                            </p>
                        </header>
                        <div class="card-image">
                            <img width="128px" src="https://bencher.dev/favicon.svg" alt="Bencher Logo" style="margin-top: 1rem; margin-bottom: 1rem;" />
                        </div>
                        <footer class="card-footer">
                            <a href="https://bencher.dev/favicon.svg" class="card-footer-item" download="bencher-logo.svg">SVG</a>
                            <a href="https://s3.amazonaws.com/public.bencher.dev/img/android-chrome-512x512.png" class="card-footer-item" download="bencher-logo.png">PNG</a>
                        </footer>
                    </div>
                </div>
            </div>
            <h2 class="title">Wordmark</h2>
            <div class="columns">
                <div class="column has-text-centered is-one-third">
                    <div class="card">
                        <header class="card-header">
                            <p class="card-header-title">
                                Bencher Wordmark (Dynamic)
                            </p>
                        </header>
                        <div class="card-image">
                            <img height="128px" src="https://bencher.dev/wordmark.svg" alt="Bencher Wordmark" style="margin-top: 1rem; margin-bottom: 1rem;" />
                        </div>
                        <footer class="card-footer">
                            <a href="https://bencher.dev/wordmark.svg" class="card-footer-item" download="bencher-wordmark.svg">SVG</a>
                        </footer>
                    </div>
                </div>
                <div class="column has-text-centered is-one-third">
                    <div class="card">
                        <header class="card-header">
                            <p class="card-header-title">
                                Bencher Wordmark Light
                            </p>
                        </header>
                        <div class="card-image">
                            <img height="128px" src="https://bencher.dev/wordmark-light.svg" alt="Bencher Wordmark Light" style="margin-top: 1rem; margin-bottom: 1rem;" />
                        </div>
                        <footer class="card-footer">
                            <a href="https://bencher.dev/wordmark-light.svg" class="card-footer-item" download="bencher-wordmark-light.svg">SVG</a>
                            <a href="https://s3.amazonaws.com/public.bencher.dev/img/bencher-wordmark-light.png" class="card-footer-item" download="bencher-wordmark-light.png">PNG</a>
                        </footer>
                    </div>
                </div>
                <div class="column has-text-centered is-one-third">
                    <div class="card">
                        <header class="card-header">
                            <p class="card-header-title">
                                Bencher Wordmark Dark
                            </p>
                        </header>
                        <div class="card-image">
                            <img height="128px" src="https://bencher.dev/wordmark-dark.svg" alt="Bencher Wordmark Dark" style="margin-top: 1rem; margin-bottom: 1rem;" />
                        </div>
                        <footer class="card-footer">
                            <a href="https://bencher.dev/wordmark-dark.svg" class="card-footer-item" download="bencher-wordmark-dark.svg">SVG</a>
                            <a href="https://s3.amazonaws.com/public.bencher.dev/img/bencher-wordmark-dark.png" class="card-footer-item" download="bencher-wordmark-dark.png">PNG</a>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
